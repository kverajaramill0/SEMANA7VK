<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA7VK.Views.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido al sistema"
                 />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese Contrasena" IsPassword="True"/>

            <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked" BackgroundColor="DarkCyan" TextColor="White"/>
            <Button x:Name="btnRegistrar" Text="Registro" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>