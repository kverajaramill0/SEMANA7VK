<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA7VK.Views.Registrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre: "></Label>
            <Entry Placeholder="Introduce tu nombre" x:Name="Nombre"/>
            <Label Text="Usuario: "></Label>
            <Entry Placeholder="Introduce tu usuario" x:Name="Usuario"/>
            <Label Text="Contrasena: "></Label>
            <Entry Placeholder="Introduce tu contrasena" x:Name="Contrasenia" IsPassword="True"/>
            <Button x:Name="btn_agregar" Text="Agregar" Clicked="btn_agregar_Clicked" BackgroundColor="Azure"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>